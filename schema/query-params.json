{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "query-params.json",
  "title": "QueryParams",
  "type": "object",
  "properties": {
    "p": {
      "type": "number"
    },
    "rpp": {
      "type": "number"
    },
    "orderBy": {
      "description": "array of fields to order by, use '-' prefix for descending order",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "p",
    "rpp",
    "orderBy"
  ],
  "additionalProperties": false
}

